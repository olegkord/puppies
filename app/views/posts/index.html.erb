<h1> Puppies!! So many puppies!!</h1>

<ul>
  <% @posts.each do |post| %>
  <li>
    <div class="post">
      <h3><%= "#{post.comment}"%></h3>
      <div class="image-holder">
        <%= image_tag(post.img_url) %>
      </div>
      <p>
        <%= "#{post.body}" %>
      </p>
      <p><%= link_to "Edit this Post", edit_post_path(id: post.id) %></p>

    </div>
  </li>
  <% end %>
</ul>
